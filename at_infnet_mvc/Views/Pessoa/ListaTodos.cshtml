@model List<at_infnet_mvc.Models.Pessoa>;
@{
}

<h2> Registros de amigos</h2>
<hr />
<br />

<div class="text-md-center">
    <form method="post" action="/Pessoa/Busca">
        @Html.AntiForgeryToken()
        <label>Localizar amigo:</label>
        <input type="text" class="form-control" placeholder="Busca por nome" name="Nome" required>
        <br />
        <input type="submit" value="Buscar" class="btn btn-outline-dark" />
    </form>
</div>
<br />
<br />
<br />
<br />
<div>
    <h4 class="text-center">Todos os amigos</h4>
    <hr />
    
<table class="table table-bordered">
    
    <thead class="text-center">
            
        <tr>
            <td><strong>Id</strong></td>
            <td><strong>Nome</strong></td>
            <td><strong>Sobrenome</strong></td>
            <td><strong>Aniversário</strong></td>
            <td><strong>Ação</strong></td>
        </tr>
    </thead>
    <tbody class="text-center">
        @{

                @foreach (var pessoa in Model)
            {
                    <tr>
                        <td>
                            @pessoa.Id
                        </td>
                        <td>
                            @pessoa.Nome
                        </td>
                        <td>
                            @pessoa.Sobrenome
                        </td>
                        <td>
                            @pessoa.Aniversario.Day.ToString("00")/@pessoa.Aniversario.Month.ToString("00")
                        </td>
                        <td>
                            <button type="button" class="btn btn-outline-info">

                                @Html.ActionLink("Editar", "Editar", pessoa)
                            </button>
                            <button type="button" class="btn btn-outline-success">

                                @Html.ActionLink("Detalhes", "Detalhes", new { Id = pessoa.Id })
                            </button>
                            <button type="button" class="btn btn-outline-danger">

                                @Html.ActionLink("Deletar", "Deletar", new { Id = pessoa.Id })
                            </button>
                        </td>
                    </tr>
            }

        }
    </tbody>
</table>
</div>

<div class="text-center">
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Voltar para a Home", "Index")
    </button>
</div>

